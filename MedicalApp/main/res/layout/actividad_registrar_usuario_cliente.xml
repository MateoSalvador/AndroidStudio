<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadRegistrarUsuarioCliente">

    <TextView
        android:id="@+id/lblRegistroCliente"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="#03A9F4"
        android:fontFamily="sans-serif-black"
        android:text="REGISTRO CLIENTE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/lblUsuarioClienteRegistro"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-black"
        android:text="Usuario"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRegistroCliente" />

    <EditText
        android:id="@+id/txtRegistrarUsuarioCliente"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:hint="Registre Su Usuario"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblUsuarioClienteRegistro" />

    <TextView
        android:id="@+id/lblRegistrarContraseñaCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-black"
        android:text="Contraseña"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistrarUsuarioCliente" />

    <EditText
        android:id="@+id/txtRegistrarContraseñaCliente"
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="************"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRegistrarContraseñaCliente" />

    <TextView
        android:id="@+id/lblConfirmarContraseñaCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="Confirmar Contraseña"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistrarContraseñaCliente" />

    <EditText
        android:id="@+id/txtConfirmarContraseñaCliente"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="*************"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblConfirmarContraseñaCliente" />

    <Button
        android:id="@+id/btnGuardarRegistroCliente"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="150dp"
        android:text="Registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConfirmarContraseñaCliente" />

    <Button
        android:id="@+id/btnCancelarRegistroCliente"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="150dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardarRegistroCliente" />


</androidx.constraintlayout.widget.ConstraintLayout>